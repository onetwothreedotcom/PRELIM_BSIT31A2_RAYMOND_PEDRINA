@model List<User>

<!DOCTYPE html>
<html>
<head>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            table-layout: fixed;
        }

        th, td {
            border: 1px solid #333;
            padding: 6px 8px;
            text-align: left;
            vertical-align: top;
            word-wrap: break-word;
        }

        th {
            background-color: #1e90ff;
            color: white;
        }

        tr:nth-child(even) {
            background-color: #e6f2ff;
        }
    </style>
</head>
<body>
    <h2>User Borrowed Books</h2>

    <table>
        <thead>
            <tr>
                <th>User</th>
                <th>Book Title</th>
                <th>Genre</th>
                <th>Date Borrowed</th>
                <th>Date Returned</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                var firstRow = true;
                var borrowCount = user.BorrowedBooks.Count;

                foreach (var borrow in user.BorrowedBooks)
                {
                    <tr>
                        @* Only print the user name in the first row, span rows *@
                        @if (firstRow)
                        {
                            <td rowspan="@borrowCount">@user.Username</td>
                            firstRow = false;
                        }
                        <td>@borrow.Book.Title</td>
                        <td>@borrow.Book.Genre.Name</td>
                        <td>@borrow.DateBorrowed.ToString("MM/dd/yy")</td>
                        <td>@(borrow.DateReturned.HasValue ? borrow.DateReturned.Value.ToString("MM/dd/yy") : "Not returned")</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</body>
</html>
